// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Student model
model Student {
  id            Int           @id @default(autoincrement())
  username      String        @unique
  email         String        @unique
  password      String        
  studentNumber String        @unique
  bookings      Booking[]     
  review        Review[]
  firstName     String
  lastName      String
  role          String
}

// Trip model
model Trip {
  id            Int           @id @default(autoincrement())
  description   String
  destination   String
  startDate     DateTime
  endDate       DateTime
  price         Float
  bookings      Booking[]     
  reviews       Review[]     
}

// Booking model
model Booking {
  id            Int           @id @default(autoincrement())
  bookingDate   DateTime      @default(now())
  paymentStatus PaymentStatus
  students      Student[]    
  tripId        Int
  trip          Trip          @relation(fields: [tripId], references: [id])
}

// Enum for Payment Status
enum PaymentStatus {
  Pending
  Paid
  Confirmed
}
// Review model
model Review {
  id            Int           @id @default(autoincrement())
  comment       String
  rating        Int      
  tripId        Int
  trip          Trip          @relation(fields: [tripId], references: [id]) 
  studentId     Int           
  student       Student       @relation(fields: [studentId], references: [id]) 
}
