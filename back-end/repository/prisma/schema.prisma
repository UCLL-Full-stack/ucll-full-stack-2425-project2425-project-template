generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  role      String? 
  name      String  
  firstName String  
  password  String  
  chats      Chat[]      
  groupchats GroupChat[]
  Subscription Subscription?
}

model Chat {
  id        Int      @id @default(autoincrement())
  message   String   
  createdAt DateTime @default(now())
  userId      Int     
  user        User      @relation(fields: [userId], references: [id])
  GroupChat GroupChat[]
}

model GroupChat {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  description String
  name        String
  chats       Chat[]  
  users       User[]   
}

model Subscription {
  id        Int      @id @default(autoincrement())
  type      String
  startDate DateTime
  endDate   DateTime
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])
}
