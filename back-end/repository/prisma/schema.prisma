datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                Int      @id @default(autoincrement())
  email             String   @unique
  name              String
  phoneNumber       Int
  password          String
  listOfCarsForSelling Vehicle[] @relation()
  
  favouriteCars     FavouriteCars[] 

  cars              Car[] @relation()
  motorcycles       Motorcycle[] @relation()
}

model Vehicle {
  id                Int       @id @default(autoincrement())
  manufacturer      String
  model_name        String
  price             Float
  fuelType          String
  transmissionType  String
  year              Int
  vehicleType       String
  bodyType          String
  mileage           Int
  engineCapacity    Int
  createdAt         DateTime
  updatedAt         DateTime
  sellerId          Int?
  seller            User?   @relation( fields: [sellerId], references: [id])

  // Back-relation to FavouriteCars
  favouriteByUsers  FavouriteCars[] 

  car               Car?      
  motorcycle        Motorcycle?   
}

model Car {
  id                Int       @id @default(autoincrement())
  vehicleId         Int       @unique
  vehicle           Vehicle   @relation(fields: [vehicleId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  manufacturer      String
  model_name        String
  price             Float
  fuelType          String
  transmissionType  String
  year              Int
  vehicleType       String
  bodyType          String
  mileage           Int
  engineCapacity    Int
  createdAt         DateTime
  updatedAt         DateTime

  sellerId          Int?
  seller            User?   @relation( fields: [sellerId], references: [id])
}

model Motorcycle {
  id                Int       @id @default(autoincrement())
  vehicleId         Int       @unique 
  vehicle           Vehicle   @relation(fields: [vehicleId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  manufacturer      String
  model_name        String
  price             Float
  fuelType          String
  transmissionType  String
  year              Int
  vehicleType       String
  bodyType          String
  mileage           Int
  engineCapacity    Int
  createdAt         DateTime
  updatedAt         DateTime

  sellerId          Int?
  seller            User?   @relation (fields: [sellerId], references: [id])
}

model FavouriteCars {
  userId    Int
  vehicleId Int

  user      User    @relation(fields: [userId], references: [id])
  vehicle   Vehicle @relation(fields: [vehicleId], references: [id])

  @@id([userId, vehicleId])
}
