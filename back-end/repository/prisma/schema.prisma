generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id          Int     @id @default(autoincrement())
    username    String  @unique
    name        String
    email       String  @unique
    password    String
    age         Int
    role        String
    events      Event[]
}

model Event {
    id              Int     @id @default(autoincrement())
    name            String
    description     String
    date            DateTime
    location        String
    category        String
    backgroundImage String @default("")
    users           User[]
    isTrending      Boolean
    tickets         Ticket[]
}

model Ticket {
    id    Int   @id   @default(autoincrement())
    type  String
    cost  Int
    events  Event[]
}