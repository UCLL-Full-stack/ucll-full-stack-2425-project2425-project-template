generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
    id          Int     @id @default(autoincrement())
    name        String
    description String
    date        DateTime
    location    String
    category    String
    backgroundImage String @default("")
    participants Participant[]
    isTrending  Boolean
}

model User {
    id      Int         @id @default(autoincrement())
    username    String  @unique
    name        String
    email       String  @unique
    password    String
    age         Int
    participant Participant?
    role        Role
}

model Participant {
    id      Int     @id @default(autoincrement())
    userId  Int     @unique
    user    User    @relation(fields: [userId], references: [id])
    events  Event[]
}

enum Role {
    participant
    organizer
}